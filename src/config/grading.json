{
  "_meta": {
    "description": "Grading scale for disclosure quality scores",
    "version": "1.0",
    "last_updated": "2025-10-30",
    "note": "Letter grades based on composite snippet scores (0-100%)"
  },
  "grades": {
    "A": {
      "label": "Excellent",
      "min": 90,
      "max": 100,
      "color": "#22c55e",
      "description": "Outstanding disclosure quality with comprehensive evidence"
    },
    "B": {
      "label": "Good",
      "min": 80,
      "max": 89,
      "color": "#3b82f6",
      "description": "Strong disclosure quality with solid evidence"
    },
    "C": {
      "label": "Satisfactory",
      "min": 70,
      "max": 79,
      "color": "#eab308",
      "description": "Adequate disclosure quality with reasonable evidence"
    },
    "D": {
      "label": "Needs Improvement",
      "min": 60,
      "max": 69,
      "color": "#f97316",
      "description": "Limited disclosure quality requiring enhancement"
    },
    "F": {
      "label": "Poor",
      "min": 0,
      "max": 59,
      "color": "#ef4444",
      "description": "Insufficient disclosure quality"
    }
  },
  "scoring_weights": {
    "description": "Weights for multi-dimensional snippet scoring",
    "financial_transparency": {
      "full": 3,
      "partial": 2,
      "non_financial": 1
    },
    "temporal_specificity": {
      "current": 3,
      "future": 2,
      "historical": 1,
      "unclear": 0
    },
    "narrative_framing": {
      "both": 3,
      "risk_or_opportunity": 2,
      "neutral": 1
    },
    "max_possible": 9
  }
}
