---
/**
 * Company-Year-Version Detail Page
 * Displays comprehensive analysis for a specific company, fiscal year, and version
 * with snippet-level evidence analysis
 */

import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/layout/Header.astro';
import Breadcrumb from '../../../components/layout/Breadcrumb.astro';
import SummaryDashboard from '../../../components/detail/SummaryDashboard.astro';
import FiltersBar from '../../../components/detail/FiltersBar.astro';
import QuestionAccordion from '../../../components/detail/QuestionAccordion.astro';
import ComparisonToggle from '../../../components/detail/ComparisonToggle.astro';
import VersionBadge from '../../../components/VersionBadge.astro';

import { loadCompanyYear, loadAllCompanyData, getVersionsForCompanyYear } from '../../../utils/dataLoader';
import { calculateCompanyMetrics, calculateQuestionMetrics } from '../../../utils/metricsCalculator';
import { compareOriginalVsVerified } from '../../../utils/verificationComparison';
import categoriesConfig from '../../../config/categories.json';
import { formatNumber } from '../../../utils/formatters';
import { readFile } from 'node:fs/promises';
import { join } from 'node:path';

// Add getStaticPaths for static site generation
export async function getStaticPaths() {
  const allData = await loadAllCompanyData();

  return allData.map(data => ({
    params: {
      company: data.company.toLowerCase(),
      year: data.year.toString(),
      version: data.version
    }
  }));
}

// Get company, year, and version from URL
const { company, year, version } = Astro.params;
const versionLower = version.toLowerCase();

if (!company || !year || !version) {
  return Astro.redirect('/');
}

// Load company data for specific version
const yearNum = parseInt(year);
const companyData = await loadCompanyYear(company, yearNum, version);

if (!companyData) {
  return Astro.redirect('/');
}

// Get all available versions for this company-year
const availableVersions = await getVersionsForCompanyYear(company, yearNum);
const isLatestVersion = availableVersions[0] === version;
const isMergedVersion = companyData.isMerged === true || version.toLowerCase().startsWith('merged');
const sourceVersions = companyData.mergedMetadata?.sourceVersions ?? [];
const sourcePresence = isMergedVersion
  ? sourceVersions.map(vLabel => ({
      version: vLabel,
      available: availableVersions.some(av => av.toLowerCase() === vLabel.toLowerCase())
    }))
  : [];
const mergerSummary = companyData.mergedMetadata?.mergerSummary
  || companyData.verified.merger_summary
  || {};
const completenessSummary = companyData.mergedMetadata?.completenessSummary
  || companyData.verified.completeness_summary;
const mergerTimestamp = mergerSummary.merger_timestamp
  || companyData.mergedMetadata?.mergerTimestamp
  || companyData.verified.metadata?.merger_timestamp
  || companyData.verified.analysis_date;

// Calculate metrics
const companyMetrics = calculateCompanyMetrics(companyData.verified);

// Calculate question-level metrics
const questionMetrics = companyData.verified.analysis_results.map(question =>
  calculateQuestionMetrics(question)
);

// Calculate verification metrics if comparison available
let verificationMetrics;
if (companyData.hasComparison && companyData.original) {
  verificationMetrics = compareOriginalVsVerified(
    companyData.original,
    companyData.verified,
    companyData.verificationReport
  );
}

// Group questions by category - filter out NO_DISCLOSURE items
const questionsByCategory = new Map<string, Array<{ question: any; metrics: any }>>();

companyData.verified.analysis_results.forEach((question, index) => {
  // Filter out NO_DISCLOSURE snippets from the question
  const actualDisclosures = question.disclosures?.filter(
    (disclosure: any) => disclosure.classification !== 'NO_DISCLOSURE'
  ) || [];

  // Skip questions with no actual disclosures (only NO_DISCLOSURE or empty)
  if (actualDisclosures.length === 0) {
    return; // Skip this question entirely
  }

  // Create a modified question object with filtered disclosures
  const filteredQuestion = {
    ...question,
    disclosures: actualDisclosures
  };

  const category = question.category || 'Other';
  if (!questionsByCategory.has(category)) {
    questionsByCategory.set(category, []);
  }
  questionsByCategory.get(category)!.push({
    question: filteredQuestion,
    metrics: questionMetrics[index]
  });
});

// Get all unique categories
const allCategories = Array.from(questionsByCategory.keys());

// Build breadcrumb items
const totalQuestionsAnalyzed = new Set(
  companyData.verified.analysis_results.map(q => q.question_id)
).size;

// Use properly capitalized company name for display
const displayCompanyName = companyData.company;

const breadcrumbItems = [
  { label: 'Home', href: import.meta.env.BASE_URL },
  { label: displayCompanyName, href: '#' },
  { label: `${year} ${version}`, href: '#', current: true }
];

const sectorLabelMap: Record<string, { short: string; long: string }> = {
  F: { short: 'F', long: 'Fertilizers' },
  P: { short: 'P', long: 'Crop protection' },
  PF: { short: 'F&P', long: 'Fertilizers & Crop protection' },
  ALL: { short: 'F&P', long: 'Fertilizers & Crop protection' }
};
const sectorInfo = sectorLabelMap[(companyData.sector || 'ALL').toUpperCase()] || sectorLabelMap.ALL;

async function loadPageTotals(): Promise<Record<string, Record<string, { totalPages: number }>>> {
  try {
    const path = join(process.cwd(), 'public', 'source_documents', 'page_totals.json');
    const raw = await readFile(path, 'utf-8');
    return JSON.parse(raw);
  } catch (error) {
    console.warn('Page totals file not found or unreadable:', error);
    return {};
  }
}

const pageTotals = await loadPageTotals();
const totalPages = pageTotals[companyData.company]?.[String(companyData.year)]?.totalPages ?? null;
const totalPagesDisplay = totalPages ? formatNumber(totalPages) : null;
---

<Layout title={`${displayCompanyName} ${year} ${version} - Analysis`}>
  <Header />

  <div class="min-h-screen bg-slate-950/70">
    <!-- Page Header -->
    <div class="bg-slate-950/85 border-b border-slate-800 shadow-lg">
      <div class="container mx-auto px-6 py-6">
        <Breadcrumb items={breadcrumbItems} />

        <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4 mt-4">
          <div>
            <div class="flex items-center gap-3 mb-2">
              <h1 class="text-3xl font-bold text-slate-50 tracking-tight">
                {displayCompanyName} - Year {year}
              </h1>
              {versionLower !== 'team-reviewed' && (
                <VersionBadge version={version} isLatest={isLatestVersion} size="md" />
              )}
              {versionLower === 'team-reviewed' && isLatestVersion && (
                <span class="inline-flex items-center rounded-md bg-blue-100 px-3 py-1 text-sm font-semibold text-blue-800 ring-1 ring-inset ring-blue-600/20">
                  Latest
                </span>
              )}
              {sectorInfo.short !== 'ALL' && (
                <span class="px-2.5 py-1 rounded-full border border-slate-600 bg-slate-900/70 text-xs font-semibold uppercase tracking-wide text-slate-100">
                  {sectorInfo.short}
                </span>
              )}
            </div>
            <div class="flex items-center gap-4 text-sm text-slate-400 flex-wrap">
              <span>LLM used: Gemini 2.5 Flash (extraction) + Gemini 2.5 Pro (verification)</span>
              <span aria-hidden="true">&bull;</span>
              <span>{totalQuestionsAnalyzed} questions analyzed</span>
              <span aria-hidden="true">&bull;</span>
              <span>{companyMetrics.total_snippets} total disclosures</span>
              <span aria-hidden="true">&bull;</span>
              <span class="text-xs text-slate-400">
                Sector: <span class="text-slate-200 font-semibold">{sectorInfo.long}</span>
          </span>
          {totalPagesDisplay && (
            <>
              <span aria-hidden="true">&bull;</span>
              <span class="text-xs text-slate-400">
                Source pages: <span class="text-slate-200 font-semibold">{totalPagesDisplay}</span>
              </span>
            </>
          )}
        </div>

        <!-- Criteria definitions -->
        <details class="mt-4 rounded-lg border border-slate-800 bg-slate-900/70 px-4 py-3 text-sm text-slate-300">
          <summary class="cursor-pointer font-semibold text-slate-100">Categorization criteria ⓘ</summary>
          <div class="mt-3 space-y-3 text-sm leading-relaxed">
            <div>
              <div class="font-semibold text-slate-100">Disclosure Timeframe</div>
              <ul class="list-disc list-inside space-y-1 text-slate-300">
                <li><strong>Backward-looking</strong>: Past-only; started and completed in the past.</li>
                <li><strong>Present day</strong>: Ongoing at report time.</li>
                <li><strong>Forward-looking</strong>: Not yet started; anticipated or potential.</li>
                <li><strong>Multiple or Unclear</strong>: Ambiguous or spans horizons.</li>
              </ul>
            </div>
            <div>
              <div class="font-semibold text-slate-100">Disclosure Framing</div>
              <ul class="list-disc list-inside space-y-1 text-slate-300">
                <li><strong>Risk</strong>: Emphasizes harm/uncertainty.</li>
                <li><strong>Opportunity</strong>: Emphasizes benefit/value creation.</li>
                <li><strong>Neutral</strong>: Factual/descriptive only.</li>
                <li><strong>Both</strong>: Balanced risk and opportunity.</li>
              </ul>
            </div>
          </div>
        </details>

        <!-- Version Selector -->
        {availableVersions.length > 1 && (
          <div class="mt-3 flex items-center gap-2">
            <span class="text-sm text-slate-400">Other versions:</span>
                <div class="flex gap-2">
                  {availableVersions.filter(v => v !== version).map(v => (
                    <a
                      href={`${import.meta.env.BASE_URL}/${company}/${year}/${v}`}
                      class="text-sm px-3 py-1 rounded-md border border-slate-600 text-slate-300 hover:border-slate-400 hover:text-slate-100 transition-colors"
                    >
                      {v}
                    </a>
                  ))}
                </div>
              </div>
            )}

            {isMergedVersion && sourcePresence.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {sourcePresence.map(source => (
                  <span
                    class={`px-2.5 py-1 rounded-full border text-xs ${
                      source.available
                        ? 'border-emerald-400/50 bg-emerald-500/15 text-emerald-200'
                        : 'border-slate-600 bg-slate-900/70 text-slate-400'
                    }`}
                  >
                    {source.version.toUpperCase()}
                    <span class="ml-2 uppercase tracking-wide text-[10px]">
                      {source.available ? 'Available' : 'Missing'}
                    </span>
                  </span>
                ))}
              </div>
            )}
          </div>

          <div class="flex items-center gap-6">
            <!-- Total Evidence -->
            <div class="text-center">
              <div class="text-5xl font-bold text-sky-300">
                {companyMetrics.total_snippets}
              </div>
              <div class="text-xs text-slate-500 uppercase tracking-wide mt-2">Total Evidence disclosures</div>
              {totalPagesDisplay && (
                <div class="text-[11px] text-slate-400 mt-1">
                  From {totalPagesDisplay} pages
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-10">
      {isMergedVersion && (
        <section class="mb-8">
          <div class="surface p-6 space-y-4 border border-emerald-500/20">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
              <div>
                <h2 class="text-xl font-semibold text-emerald-200">Merged Evidence Overview</h2>
                <p class="text-sm text-slate-400 mt-1">
                  Combined snippets from {sourceVersions.join(' + ') || 'multiple versions'} reviewed for higher fidelity disclosure analysis.
                </p>
              </div>
              <div class="text-sm text-slate-400">
                <span class="uppercase tracking-wide text-[10px] text-slate-500 block">Merged</span>
                <span class="font-semibold text-slate-200">{mergerTimestamp}</span>
              </div>
            </div>

            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4 text-sm text-slate-200">
              <div class="rounded-lg border border-slate-700 bg-slate-900/60 p-4">
                <div class="text-[10px] uppercase tracking-wide text-slate-500">Merged Snippets</div>
                <div class="text-2xl font-semibold text-slate-100 mt-1">
                  {formatNumber(mergerSummary.total_merged_snippets ?? companyMetrics.total_snippets)}
                </div>
                <div class="text-xs text-slate-500 mt-1">Combined evidence retained after merge</div>
              </div>
              <div class="rounded-lg border border-slate-700 bg-slate-900/60 p-4">
                <div class="text-[10px] uppercase tracking-wide text-slate-500">Source Contributions</div>
                <div class="text-sm font-semibold text-slate-100 mt-1">
                  v3 {formatNumber(mergerSummary.total_v3_snippets ?? 0)} | v4 {formatNumber(mergerSummary.total_v4_snippets ?? 0)}
                </div>
                <div class="text-xs text-slate-500 mt-1">Snippets assessed from each version</div>
              </div>
              <div class="rounded-lg border border-slate-700 bg-slate-900/60 p-4">
                <div class="text-[10px] uppercase tracking-wide text-slate-500">AI Reviews</div>
                <div class="text-2xl font-semibold text-slate-100 mt-1">
                  {formatNumber(mergerSummary.total_ai_reviews ?? 0)}
                </div>
                <div class="text-xs text-slate-500 mt-1">Automated merge decisions</div>
              </div>
              <div class="rounded-lg border border-slate-700 bg-slate-900/60 p-4">
                <div class="text-[10px] uppercase tracking-wide text-slate-500">Human Flags</div>
                <div class="text-2xl font-semibold text-slate-100 mt-1">
                  {formatNumber(mergerSummary.total_human_flags ?? 0)}
                </div>
                <div class="text-xs text-slate-500 mt-1">Items recommended for reviewer follow-up</div>
              </div>
            </div>

            {completenessSummary?.total_questions_analyzed && (
              <div class="text-xs text-slate-400">
                Coverage: {formatNumber(completenessSummary.total_questions_analyzed)} questions | {formatNumber(completenessSummary.total_disclosure_snippets ?? 0)} snippets.
              </div>
            )}
            {completenessSummary?.note && (
              <div class="text-[11px] text-slate-500">
                {completenessSummary.note}
              </div>
            )}
          </div>
        </section>
      )}

      <!-- Summary Dashboard -->
      <section class="mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
          <h2 class="text-lg font-semibold text-slate-200">Overview</h2>
        </div>
        <SummaryDashboard metrics={companyMetrics} totalPages={totalPages ?? undefined} />
      </section>

      {companyData.hasComparison && (
        <section class="mb-8">
          <ComparisonToggle
            hasComparison={companyData.hasComparison}
            verificationMetrics={verificationMetrics}
          />
        </section>
      )}

      <!-- Filters and Questions -->
      <section>
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-slate-100 mb-4">Detailed Question Analysis</h2>
          <p class="text-sm text-slate-400 mb-6">
            Explore each question with snippet-level evidence. Questions are collapsed by default—click to expand and review the supporting disclosures.
          </p>

          <!-- Filters Bar -->
          <FiltersBar categories={allCategories} />
        </div>

        <!-- Questions Container -->
        <div id="questions-container" class="space-y-4">
          {Array.from(questionsByCategory.entries()).map(([categoryName, items]) => {
            const categoryConfig = categoriesConfig.categories.find(c => c.name === categoryName);
            const categoryIcon = categoryConfig?.icon || '??';
            const categoryColor = categoryConfig?.color || '#6b7280';
            const categoryId = categoryConfig?.id || categoryName;

            return items.map(({ question, metrics }) => (
              <QuestionAccordion
                question={question}
                metrics={metrics}
                category={categoryName}
                categoryIcon={categoryIcon}
                categoryColor={categoryColor}
                categoryId={categoryId}
                companyName={companyData.company}
                year={companyData.year}
              />
            ));
          })}
        </div>

        <!-- No Results Message -->
        <div id="no-results" class="hidden text-center py-12">
          <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-slate-600 mb-2">No questions match your filters</h3>
          <p class="text-sm text-slate-500">Try adjusting your filter criteria</p>
        </div>
      </section>

    </main>
  </div>
</Layout>

<style>
  /* Smooth transitions for interactive elements */
  .question-header {
    transition: background-color 0.2s ease;
  }

  .question-header:hover {
    background-color: rgba(46, 58, 85, 0.45);
  }

  /* Custom scrollbar for long content */
  .question-content {
    max-height: none;
  }

  @media (max-width: 768px) {
    .question-content {
      max-height: 80vh;
      overflow-y: auto;
    }
  }
</style>

