---
import Layout from '../layouts/Layout.astro';
import {
  loadAllResults,
  getAvailableCompanies,
  getAvailableComparisons,
  loadCompanyResults,
  getBaseQuestionId,
  calculateApplicableQuestions,
  loadQuestionsMetadata,
  findCommonCanonicalQuestions
} from '../utils/dataLoader';
import { calculateCategoryStats } from '../utils/categoryMapper';

// Load all available data
const allResults = await loadAllResults();
const companies = await getAvailableCompanies();
const comparisons = await getAvailableComparisons();
const questionsMetadata = await loadQuestionsMetadata();

// Calculate summary statistics
const totalAnalyses = allResults.length;
const dragAnalyses = allResults.filter(r => r.metadata.model_used === 'D-RAG').length;
const ourAnalyses = totalAnalyses - dragAnalyses;

// Get total canonical questions from metadata
const totalCanonicalQuestions = questionsMetadata._meta.total_canonical_questions;

// Build a set of unique questions across all data (dedupe variants and canonicals)
const uniqueQuestionSet = new Set();
for (const r of allResults) {
  if (!Array.isArray(r.questions)) continue;

  for (const q of r.questions) {
    if (!q || !q.answer || !q.answer.classification) continue;
    // question id field may be named differently in raw results; try common keys
    const rawId = q.question_id || q.ask_uid || q.id || q.questionId || '';
    if (!rawId) continue;
    // Use actual question ID (keeps variants separate, but canonicals from both systems count as one)
    uniqueQuestionSet.add(rawId);
  }
}
const totalUniqueQuestions = uniqueQuestionSet.size;

// Get comparison-specific data (company √ó model combinations)
const comparisonData = await Promise.all(
  comparisons.map(async (comparison) => {
    const results = await loadCompanyResults(comparison.company, comparison.model);

    // Calculate overall stats for this comparison (across years)
    const allQuestions = results.flatMap(r => r.questions);
    const stats = calculateCategoryStats(allQuestions);

    // Count unique base question IDs for this comparison across all years
    const comparisonQuestionSet = new Set();
    for (const r of results) {
      if (!Array.isArray(r.questions)) continue;
      for (const q of r.questions) {
        if (!q || !q.answer || !q.answer.classification) continue;
        const rawId = q.question_id || q.ask_uid || q.id || q.questionId || '';
        if (!rawId) continue;
        comparisonQuestionSet.add(getBaseQuestionId(rawId));
      }
    }

    // Calculate applicable questions for this company
    const applicableInfo = await calculateApplicableQuestions(comparison.company, allQuestions);

    // Separate N-LLM and D-RAG questions to calculate common canonicals
    const nllmQuestions = results.filter(r => r.metadata.model_used !== 'D-RAG').flatMap(r => r.questions);
    const dragQuestions = results.filter(r => r.metadata.model_used === 'D-RAG').flatMap(r => r.questions);

    // Calculate common canonicals (only if DRAG results exist)
    const canonicalComparison = dragQuestions.length > 0
      ? await findCommonCanonicalQuestions(nllmQuestions, dragQuestions, applicableInfo.companySector)
      : null;

    return {
      company: comparison.company,
      model: comparison.model,
      years: comparison.years.length,
      analyses: results.length,
      stats,
      uniqueQuestions: comparisonQuestionSet.size,
      applicableInfo,
      commonCanonicalCount: canonicalComparison?.commonCount || null,
    };
  })
);
---

<Layout title="D-Rag Validation Dashboard - Home">
  <div class="min-h-screen bg-slate-900">
    <!-- Header -->
    <header class="bg-slate-800 border-b border-slate-700">
      <div class="container mx-auto px-6 py-8">
