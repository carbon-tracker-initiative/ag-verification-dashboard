---
/**
 * Radar Comparison Component
 * Visual comparison of companies using radar charts for 4 key dimensions
 */

import type { CompanyMetrics } from '../../types/metrics';

interface Props {
  companyMetrics: CompanyMetrics[];
}

const { companyMetrics } = Astro.props;

// Prepare radar chart data for each company
const radarData = companyMetrics.map(company => {
  const dimensions = {
    financial_transparency: company.radar_metrics.financial_transparency,
    forward_looking_maturity: company.radar_metrics.forward_looking_maturity,
    narrative_balance: company.radar_metrics.narrative_balance,
    evidence_depth: company.radar_metrics.evidence_depth
  };
  const overall = (dimensions.financial_transparency + dimensions.forward_looking_maturity + dimensions.narrative_balance + dimensions.evidence_depth) / 4;
  return {
    name: company.company_name,
    dimensions,
    overall
  };
});

// Calculate industry averages for each dimension
const industryAverage = {
  financial_transparency: radarData.reduce((sum, c) => sum + c.dimensions.financial_transparency, 0) / radarData.length,
  forward_looking_maturity: radarData.reduce((sum, c) => sum + c.dimensions.forward_looking_maturity, 0) / radarData.length,
  narrative_balance: radarData.reduce((sum, c) => sum + c.dimensions.narrative_balance, 0) / radarData.length,
  evidence_depth: radarData.reduce((sum, c) => sum + c.dimensions.evidence_depth, 0) / radarData.length
};

const dimensions = [
  { key: 'financial_transparency', label: 'Financial Transparency', icon: 'üí∞', color: '#10b981' },
  { key: 'forward_looking_maturity', label: 'Forward-Looking Maturity', icon: 'üïê', color: '#3b82f6' },
  { key: 'narrative_balance', label: 'Narrative Balance', icon: '‚öñÔ∏è', color: '#8b5cf6' },
  { key: 'evidence_depth', label: 'Evidence Depth', icon: 'üìÑ', color: '#f59e0b' }
];
---

<div class="space-y-6">
  <div class="bg-white rounded-lg shadow-sm p-6 border border-slate-200">
    <h2 class="text-xl font-bold text-slate-800 mb-4 flex items-center gap-2">
      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      Multi-Dimensional Comparison
    </h2>
    <p class="text-sm text-slate-600 mb-6">
      Compare companies across 5 key disclosure quality dimensions
    </p>

    <!-- Dimension Explanations -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
      {dimensions.map(dim => (
        <div class="p-3 bg-slate-50 rounded-lg border border-slate-200">
          <div class="flex items-center gap-2 mb-2">
            <span class="text-xl">{dim.icon}</span>
            <span class="text-xs font-semibold text-slate-700">{dim.label}</span>
          </div>
          <div class="text-xs text-slate-600">
            Industry Avg: <span class="font-bold" style={`color: ${dim.color}`}>
              {industryAverage[dim.key].toFixed(1)}%
            </span>
          </div>
        </div>
      ))}
    </div>

    <!-- Company Comparison Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {radarData.map((company, index) => {
        const colors = ['#3b82f6', '#10b981', '#f59e0b', '#8b5cf6', '#ec4899'];
        const color = colors[index % colors.length];

        return (
          <div class="bg-gradient-to-br from-slate-50 to-white p-6 rounded-lg border-2 border-slate-200 hover:border-blue-300 transition-colors">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-lg font-bold text-slate-800">{company.name}</h3>
              <div class="text-right">
                <div class="text-2xl font-bold text-blue-600">{company.overall.toFixed(1)}%</div>
                <div class="text-xs text-slate-500">Overall</div>
              </div>
            </div>

            <!-- Radar Chart Placeholder (simplified as bars) -->
            <div class="space-y-3">
              {dimensions.map(dim => {
                const value = company.dimensions[dim.key];
                const avg = industryAverage[dim.key];
                const aboveAvg = value > avg;

                return (
                  <div>
                    <div class="flex items-center justify-between mb-1">
                      <div class="flex items-center gap-2">
                        <span class="text-sm">{dim.icon}</span>
                        <span class="text-xs text-slate-600">{dim.label}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class={`text-xs font-bold ${aboveAvg ? 'text-emerald-600' : 'text-red-600'}`}>
                          {value.toFixed(1)}%
                        </span>
                        {aboveAvg ? (
                          <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                          </svg>
                        ) : (
                          <svg class="w-3 h-3 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                          </svg>
                        )}
                      </div>
                    </div>
                    <div class="relative w-full bg-slate-200 rounded-full h-2">
                      <!-- Industry average marker -->
                      <div
                        class="absolute top-0 w-0.5 h-4 bg-slate-400 -mt-1"
                        style={`left: ${avg}%`}
                        title={`Industry Avg: ${avg.toFixed(1)}%`}
                      ></div>
                      <!-- Company score bar -->
                      <div
                        class="h-2 rounded-full transition-all"
                        style={`width: ${value}%; background-color: ${dim.color}`}
                      ></div>
                    </div>
                  </div>
                );
              })}
            </div>

            <!-- Strengths and Weaknesses -->
            <div class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-slate-200">
              <div>
                <div class="text-xs font-semibold text-emerald-700 mb-2">Strengths</div>
                <div class="space-y-1">
                  {dimensions
                    .filter(dim => company.dimensions[dim.key] > industryAverage[dim.key])
                    .sort((a, b) => company.dimensions[b.key] - company.dimensions[a.key])
                    .slice(0, 2)
                    .map(dim => (
                      <div class="flex items-center gap-1 text-xs text-emerald-600">
                        <span>{dim.icon}</span>
                        <span class="truncate">{dim.label}</span>
                      </div>
                    ))}
                </div>
              </div>
              <div>
                <div class="text-xs font-semibold text-red-700 mb-2">Areas to Improve</div>
                <div class="space-y-1">
                  {dimensions
                    .filter(dim => company.dimensions[dim.key] <= industryAverage[dim.key])
                    .sort((a, b) => company.dimensions[a.key] - company.dimensions[b.key])
                    .slice(0, 2)
                    .map(dim => (
                      <div class="flex items-center gap-1 text-xs text-red-600">
                        <span>{dim.icon}</span>
                        <span class="truncate">{dim.label}</span>
                      </div>
                    ))}
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Dimension Leaders -->
    <div class="mt-8">
      <h3 class="text-lg font-bold text-slate-800 mb-4">Dimension Leaders</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {dimensions.map(dim => {
          const leader = radarData.reduce((best, current) =>
            current.dimensions[dim.key] > best.dimensions[dim.key] ? current : best
          );

          return (
            <div class="p-4 bg-gradient-to-br from-white to-slate-50 rounded-lg border-2 border-slate-200">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-2xl">{dim.icon}</span>
                <div class="flex-1">
                  <div class="text-xs font-semibold text-slate-600">{dim.label}</div>
                  <div class="text-xs text-slate-500">Best Performer</div>
                </div>
              </div>
              <div class="text-lg font-bold text-slate-800">{leader.name}</div>
              <div class="text-sm font-semibold" style={`color: ${dim.color}`}>
                {leader.dimensions[dim.key].toFixed(1)}%
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</div>
