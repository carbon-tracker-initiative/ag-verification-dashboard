---
/**
 * Question Accordion Component
 * Displays a single question with collapsible snippet cards
 */

import type { QuestionResult } from '../../types/analysis';
import type { QuestionMetrics } from '../../types/metrics';
import ClassificationBadge from '../shared/ClassificationBadge.astro';
import GradeDisplay from '../shared/GradeDisplay.astro';
import SnippetCard from './SnippetCard.astro';

interface Props {
  question: QuestionResult;
  metrics: QuestionMetrics;
  category: string;
  categoryIcon: string;
  categoryColor: string;
}

const { question, metrics, category, categoryIcon, categoryColor } = Astro.props;

// Determine classification based on best snippet
const bestClassification = question.disclosures.length > 0
  ? question.disclosures[0].classification
  : 'NO_DISCLOSURE';
---

<div
  class="bg-white rounded-lg border border-slate-200 shadow-sm hover:shadow-md transition-shadow"
  data-question-id={question.question_id}
  data-category={category}
  data-classification={bestClassification}
  data-grade={metrics.disclosure_quality_grade}
  data-score={metrics.average_snippet_score}
  data-snippets={question.disclosures.length}
>
  <!-- Question Header (Always Visible, Clickable) -->
  <div class="p-4 cursor-pointer question-header" data-question-id={question.question_id}>
    <div class="flex items-start gap-3">
      <!-- Expand/Collapse Icon -->
      <span class="toggle-icon text-slate-400 text-lg mt-1 flex-shrink-0">▶</span>

      <!-- Question Content -->
      <div class="flex-1 min-w-0">
        <div class="flex items-start justify-between gap-4 mb-2">
          <div class="flex-1">
            <!-- Question ID and Category -->
            <div class="flex items-center gap-2 mb-1">
              <span class="text-xs font-mono text-slate-500">{question.question_id}</span>
              <span class="text-sm" title={category}>{categoryIcon}</span>
              <span class="text-xs text-slate-500">{category}</span>
            </div>

            <!-- Question Text -->
            <h3 class="text-base font-semibold text-slate-800 leading-tight">
              {question.question_text}
            </h3>
          </div>

          <!-- Classification Badge -->
          <div class="flex-shrink-0">
            <ClassificationBadge classification={bestClassification} size="medium" />
          </div>
        </div>

        <!-- Metrics Summary -->
        <div class="flex flex-wrap items-center gap-4 text-xs">
          <!-- Quality Grade -->
          <div class="flex items-center gap-1">
            <GradeDisplay
              grade={metrics.disclosure_quality_grade}
              score={metrics.average_snippet_score}
              size="small"
              showScore={false}
            />
          </div>

          <!-- Snippet Count -->
          <div class="flex items-center gap-1 text-slate-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>{metrics.total_snippets} snippet{metrics.total_snippets !== 1 ? 's' : ''}</span>
          </div>

          <!-- Financial Quantification Rate -->
          {metrics.financial_quantification_rate > 0 && (
            <div class="flex items-center gap-1 text-emerald-600">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{metrics.financial_quantification_rate.toFixed(0)}% financial</span>
            </div>
          )}

          <!-- Best Score -->
          <div class="flex items-center gap-1 text-blue-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
            </svg>
            <span>Best: {metrics.best_snippet_score.toFixed(0)}%</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Question Content (Collapsible) -->
  <div class="question-content border-t border-slate-200" style="display: none;">
    <div class="p-4 bg-slate-50">
      <!-- Question Summary (if available) -->
      {question.summary && (
        <div class="mb-4 p-3 bg-white rounded border border-slate-200">
          <div class="text-xs font-semibold text-slate-600 mb-1">Summary</div>
          <div class="text-sm text-slate-700">{question.summary}</div>
        </div>
      )}

      <!-- Snippets -->
      <div class="space-y-3">
        <div class="text-xs font-semibold text-slate-600 mb-2">
          Evidence Snippets ({question.disclosures.length})
        </div>
        {question.disclosures.map(snippet => (
          <SnippetCard snippet={snippet} />
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Add click handlers to all question headers
    const headers = document.querySelectorAll('.question-header');

    headers.forEach(header => {
      header.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;

        // Don't toggle if clicking on a link or button
        if (target.tagName === 'A' || target.tagName === 'BUTTON') {
          return;
        }

        const questionId = header.getAttribute('data-question-id');
        const questionDiv = document.querySelector(`[data-question-id="${questionId}"]`);

        if (!questionDiv) return;

        const content = questionDiv.querySelector('.question-content') as HTMLElement;
        const toggle = questionDiv.querySelector('.toggle-icon') as HTMLElement;

        if (!content || !toggle) return;

        // Toggle visibility
        const isHidden = content.style.display === 'none';

        if (isHidden) {
          content.style.display = 'block';
          toggle.textContent = '▼';
          toggle.classList.remove('text-slate-400');
          toggle.classList.add('text-blue-600');
        } else {
          content.style.display = 'none';
          toggle.textContent = '▶';
          toggle.classList.remove('text-blue-600');
          toggle.classList.add('text-slate-400');
        }
      });
    });
  });
</script>
