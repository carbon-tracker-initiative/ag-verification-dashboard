---
/**
 * Question Accordion Component
 * Displays a single question with collapsible snippet cards
 */

import type { QuestionResult } from '../../types/analysis';
import type { QuestionMetrics } from '../../types/metrics';
import ClassificationBadge from '../shared/ClassificationBadge.astro';
import GradeDisplay from '../shared/GradeDisplay.astro';
import SnippetCard from './SnippetCard.astro';

interface Props {
  question: QuestionResult;
  metrics: QuestionMetrics;
  category: string;
  categoryIcon: string;
  categoryColor: string;
}

const { question, metrics, category, categoryIcon, categoryColor } = Astro.props;

const bestClassification = question.disclosures.length > 0
  ? question.disclosures[0].classification
  : 'NO_DISCLOSURE';

const snippetCount = question.disclosures.length;
---

<div
  class="question-card surface hover:border-sky-500/30 transition-all"
  data-question-id={question.question_id}
  data-category={category}
  data-classification={bestClassification}
  data-grade={metrics.disclosure_quality_grade}
  data-score={metrics.average_snippet_score}
  data-snippets={snippetCount}
>
  <!-- Question Header -->
  <div class="p-5 cursor-pointer question-header flex items-start gap-4" data-question-id={question.question_id}>
    <span class="toggle-icon text-slate-500 text-xl mt-1 flex-shrink-0 select-none">▸</span>

    <div class="flex-1 min-w-0 space-y-3">
      <div class="flex items-start justify-between gap-4">
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2 mb-1 text-xs text-slate-400 uppercase tracking-wide">
            <span class="font-mono text-slate-500">{question.question_id}</span>
            <span class="opacity-60">/</span>
            <span title={category} class="inline-flex items-center gap-1">
              <span>{categoryIcon}</span>
              <span>{category}</span>
            </span>
          </div>
          <h3 class="text-lg font-semibold text-slate-100 leading-tight">
            {question.question_text}
          </h3>
        </div>

        <div class="flex flex-col items-end gap-2">
          <ClassificationBadge classification={bestClassification} size="medium" />
          <div class="hidden sm:block">
            <GradeDisplay
              grade={metrics.disclosure_quality_grade}
              score={metrics.average_snippet_score}
              size="small"
              showScore={true}
            />
          </div>
        </div>
      </div>

      <!-- Metric Chips -->
      <div class="flex flex-wrap items-center gap-3 text-xs text-slate-400">
        <span class="chip bg-slate-900/60 border border-slate-700">
          <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>{metrics.financial_quantification_rate.toFixed(0)}% financial</span>
        </span>
        <span class="chip bg-slate-900/60 border border-slate-700">
          <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
          <span>Best snippet {metrics.best_snippet_score.toFixed(0)}%</span>
        </span>
        <span class="chip bg-slate-900/60 border border-slate-700">
          <svg class="w-3.5 h-3.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>{snippetCount} snippet{snippetCount === 1 ? '' : 's'}</span>
        </span>
      </div>
    </div>
  </div>

  <!-- Question Content -->
  <div class="question-content border-t border-slate-800 hidden" data-question-id={question.question_id}>
    <div class="p-5 bg-slate-900/60 rounded-b-xl border-t border-slate-800/70 space-y-5">
      {question.summary && (
        <div class="p-4 bg-slate-900 rounded-lg border border-slate-800">
          <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide mb-2">
            Summary Insight
          </div>
          <div class="text-sm text-slate-200 leading-relaxed">{question.summary}</div>
        </div>
      )}

      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide">
            Evidence Snippets ({snippetCount})
          </div>
          {snippetCount > 1 && (
            <button
              type="button"
              class="text-xs text-sky-300 hover:text-sky-200 transition-colors snippet-expand-toggle"
              data-question-id={question.question_id}
              data-expanded="false"
            >
              Expand all snippets
            </button>
          )}
        </div>

        {snippetCount > 0 ? (
          question.disclosures.map((snippet, index) => (
            <SnippetCard snippet={snippet} index={index + 1} />
          ))
        ) : (
          <div class="p-4 border border-slate-800 rounded-lg bg-slate-900 text-xs text-slate-400">
            No evidence snippets were captured for this question.
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<script is:inline>
  (function() {
    function initAccordions() {
      const cards = document.querySelectorAll('.question-card');

      cards.forEach(card => {
        const header = card.querySelector('.question-header');
        const toggleIcon = card.querySelector('.toggle-icon');
        const content = card.querySelector('.question-content');
        const snippetToggle = card.querySelector('.snippet-expand-toggle') as HTMLElement | null;

        if (!header || !toggleIcon || !content) return;

        header.addEventListener('click', (event) => {
          const target = event.target as HTMLElement;
          if (target.tagName === 'A' || target.tagName === 'BUTTON' || target.closest('button')) {
            return;
          }

          const isHidden = content.classList.contains('hidden') || content.hasAttribute('hidden') || content.style.display === 'none';

          if (isHidden) {
            content.classList.remove('hidden');
            content.style.display = 'block';
            toggleIcon.textContent = '▾';
            toggleIcon.classList.remove('text-slate-500');
            toggleIcon.classList.add('text-sky-300');
            card.classList.add('expanded');
          } else {
            content.classList.add('hidden');
            content.style.display = 'none';
            toggleIcon.textContent = '▸';
            toggleIcon.classList.remove('text-sky-300');
            toggleIcon.classList.add('text-slate-500');
            card.classList.remove('expanded');
          }
        });

        if (snippetToggle) {
          snippetToggle.addEventListener('click', () => {
            const expanded = snippetToggle.dataset.expanded === 'true';
            const detailBlocks = card.querySelectorAll('.snippet-card details');

            detailBlocks.forEach(details => {
              if (expanded) {
                (details as HTMLDetailsElement).open = false;
              } else {
                (details as HTMLDetailsElement).open = true;
              }
            });

            snippetToggle.dataset.expanded = expanded ? 'false' : 'true';
            snippetToggle.textContent = expanded ? 'Expand all snippets' : 'Collapse all snippets';
          });
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAccordions);
    } else {
      initAccordions();
    }

    document.addEventListener('astro:page-load', initAccordions);
  })();
</script>
