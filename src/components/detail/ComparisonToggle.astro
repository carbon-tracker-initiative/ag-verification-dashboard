---
/**
 * Comparison Toggle Component
 * Allows toggling between verified-only view and comparison view (original vs verified)
 */

import type { VerificationMetrics } from '../../types/verification';

interface Props {
  hasComparison: boolean;
  verificationMetrics?: VerificationMetrics;
}

const { hasComparison, verificationMetrics } = Astro.props;
---

{hasComparison && verificationMetrics && (
  <div class="surface border border-purple-500/20 mb-6">
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4">
      <!-- Left: Comparison Info -->
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-5 h-5 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-sm font-bold text-slate-100 uppercase tracking-wide">Verification Comparison Available</h3>
        </div>
        <p class="text-xs text-slate-400 mb-3">
          Compare original AI analysis with verified results to reveal corrections and evidence confidence shifts.
        </p>

        <!-- Verification Stats -->
        <div class="flex flex-wrap gap-4 text-xs text-slate-300">
          <div class="flex items-center gap-1">
            <span class="text-purple-300 font-semibold">Pass Rate:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.pass_rate.toFixed(1)}%
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-amber-300 font-semibold">Corrected:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_corrected}
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-rose-300 font-semibold">Removed:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_removed}
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-emerald-300 font-semibold">Unchanged:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_unchanged}
            </span>
          </div>
        </div>
      </div>

      <!-- Right: Toggle Button -->
      <div class="flex-shrink-0">
        <button
          id="comparison-toggle"
          class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-500 hover:to-indigo-500 text-white font-semibold rounded-lg shadow-lg transition-all transform hover:scale-105 active:scale-95 flex items-center gap-2"
          data-mode="verified"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
          </svg>
          <span id="toggle-text">Enable Comparison Mode</span>
        </button>
      </div>
    </div>

    <!-- Comparison Legend (Hidden by default, shown when comparison mode is active) -->
    <div id="comparison-legend" class="hidden mt-4 pt-4 border-t border-slate-800">
      <div class="text-xs font-semibold text-slate-200 mb-2 uppercase tracking-wide">Comparison Legend</div>
      <div class="flex flex-wrap gap-4 text-xs text-slate-400">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-emerald-400"></div>
          <span>Unchanged (passed verification)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-amber-400"></div>
          <span>Corrected (modified)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-rose-400"></div>
          <span>Removed (failed verification)</span>
        </div>
      </div>
    </div>
  </div>
)}

{!hasComparison && (
  <div class="surface border border-slate-800/60 mb-6">
    <div class="flex items-start gap-3">
      <svg class="w-5 h-5 text-slate-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <div class="text-sm font-semibold text-slate-100 mb-1">Verified Results Only</div>
        <div class="text-xs text-slate-400">
          Comparison data not available. Displaying verified analysis results with snippet-level scoring.
        </div>
      </div>
    </div>
  </div>
)}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('comparison-toggle');
    const toggleText = document.getElementById('toggle-text');
    const legend = document.getElementById('comparison-legend');

    if (!toggleButton || !toggleText) return;

    let currentMode: 'verified' | 'comparison' = 'verified';

    toggleButton.addEventListener('click', () => {
      currentMode = currentMode === 'verified' ? 'comparison' : 'verified';
      toggleButton.dataset.mode = currentMode;

      if (currentMode === 'comparison') {
        toggleText.textContent = 'Show Verified Only';
        toggleButton.classList.remove('from-purple-600', 'to-indigo-600', 'hover:from-purple-500', 'hover:to-indigo-500');
        toggleButton.classList.add('from-sky-500', 'to-emerald-500', 'hover:from-sky-400', 'hover:to-emerald-400');
        legend?.classList.remove('hidden');

        // Show comparison view
        document.querySelectorAll('[data-snippet-status]').forEach(el => {
          const snippet = el as HTMLElement;
          const status = snippet.dataset.snippetStatus;

          snippet.classList.add('comparison-mode');

          if (status === 'unchanged') {
            snippet.classList.add('ring-2', 'ring-emerald-400');
          } else if (status === 'corrected') {
            snippet.classList.add('ring-2', 'ring-amber-400');
          } else if (status === 'removed') {
            snippet.classList.add('ring-2', 'ring-rose-500', 'opacity-60');
          }
        });

        document.querySelectorAll('.comparison-badge').forEach(badge => {
          (badge as HTMLElement).classList.remove('hidden');
        });
      } else {
        toggleText.textContent = 'Enable Comparison Mode';
        toggleButton.classList.remove('from-sky-500', 'to-emerald-500', 'hover:from-sky-400', 'hover:to-emerald-400');
        toggleButton.classList.add('from-purple-600', 'to-indigo-600', 'hover:from-purple-500', 'hover:to-indigo-500');
        legend?.classList.add('hidden');

        document.querySelectorAll('[data-snippet-status]').forEach(el => {
          const snippet = el as HTMLElement;
          snippet.classList.remove('comparison-mode', 'ring-2', 'ring-emerald-400', 'ring-amber-400', 'ring-rose-500', 'opacity-60');
        });

        document.querySelectorAll('.comparison-badge').forEach(badge => {
          (badge as HTMLElement).classList.add('hidden');
        });
      }

      window.dispatchEvent(new CustomEvent('comparisonModeChanged', {
        detail: { mode: currentMode }
      }));
    });
  });
</script>
