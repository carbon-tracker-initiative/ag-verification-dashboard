---
/**
 * Comparison Toggle Component
 * Allows toggling between verified-only view and comparison view (original vs verified)
 */

import type { VerificationMetrics } from '../../types/verification';

interface Props {
  hasComparison: boolean;
  verificationMetrics?: VerificationMetrics;
}

const { hasComparison, verificationMetrics } = Astro.props;
const correctedQuestions = verificationMetrics?.corrected_questions ?? [];
const hasCorrectedQuestions = correctedQuestions.length > 0;
---

{hasComparison && verificationMetrics && (
  <div class="surface border border-purple-500/20 mb-6 p-6 space-y-4">
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4">
      <!-- Left: Comparison Info -->
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-5 h-5 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-sm font-bold text-slate-100 uppercase tracking-wide">Verification Comparison Available</h3>
        </div>
        <p class="text-xs text-slate-400 mb-3">
          Compare original AI analysis with verified results to reveal corrections and evidence confidence shifts.
        </p>

        <!-- Verification Stats -->
        <div class="flex flex-wrap gap-4 text-xs text-slate-300">
          <div class="flex items-center gap-1">
            <span class="text-purple-300 font-semibold">Pass Rate:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.pass_rate.toFixed(1)}%
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-amber-300 font-semibold">Corrected:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_corrected}
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-rose-300 font-semibold">Removed:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_removed}
            </span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-emerald-300 font-semibold">Unchanged:</span>
            <span class="text-slate-100 font-bold">
              {verificationMetrics.snippets_unchanged}
            </span>
          </div>
        </div>
      </div>

      <!-- Right: Toggle Button -->
      <div class="flex-shrink-0">
        <button
          id="comparison-toggle"
          class="px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-500 hover:to-indigo-500 text-white font-semibold rounded-lg shadow-lg transition-all transform hover:scale-105 active:scale-95 flex items-center gap-2"
          data-mode="verified"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
          </svg>
          <span id="toggle-text">Enable Comparison Mode</span>
        </button>
      </div>
    </div>

    {hasCorrectedQuestions && (
      <div
        id="corrected-questions-container"
        class="hidden border-t border-slate-800 pt-4 space-y-3"
      >
        <div class="flex items-center justify-between gap-2">
          <div class="text-xs font-semibold text-slate-200 uppercase tracking-wide">
            Questions Corrected During Verification
          </div>
          <div class="text-[11px] text-slate-500">
            Select a question to jump to its updated evidence.
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-2">
          {correctedQuestions.map(question => (
            <a
              href={`#question-${question.question_id}`}
              data-corrected-question-link={question.question_id}
              class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-amber-400/40 bg-amber-500/10 text-xs font-semibold text-amber-100 hover:bg-amber-500/20 hover:border-amber-300/60 transition-colors"
            >
              <span class="font-mono text-[11px] uppercase tracking-wide text-amber-200">
                {question.question_id}
              </span>
              <span class="text-slate-200 normal-case">{question.question_text}</span>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Comparison Legend (Hidden by default, shown when comparison mode is active) -->
    <div id="comparison-legend" class="hidden pt-4 border-t border-slate-800">
      <div class="text-xs font-semibold text-slate-200 mb-2 uppercase tracking-wide">Comparison Legend</div>
      <div class="flex flex-wrap gap-4 text-xs text-slate-400">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-emerald-400"></div>
          <span>Unchanged (passed verification)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-amber-400"></div>
          <span>Corrected (modified)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 rounded-full bg-rose-400"></div>
          <span>Removed (failed verification)</span>
        </div>
      </div>
    </div>
  </div>
)}

{!hasComparison && (
  <div class="surface border border-slate-800/60 mb-6 p-6">
    <div class="flex items-start gap-3">
      <svg class="w-5 h-5 text-slate-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <div class="text-sm font-semibold text-slate-100 mb-1">Verified Results Only</div>
        <div class="text-xs text-slate-400">
        Comparison data not available. Displaying verified analysis results with verified disclosure evidence.
        </div>
      </div>
    </div>
  </div>
)}

<script>
  function initComparisonToggle() {
    const toggleButton = document.getElementById('comparison-toggle');
    const toggleText = document.getElementById('toggle-text');
    const legend = document.getElementById('comparison-legend');
    const correctedContainer = document.getElementById('corrected-questions-container');

    if (!(toggleButton instanceof HTMLButtonElement) || !(toggleText instanceof HTMLElement)) {
      return;
    }

    if (toggleButton.dataset.bound === 'true') {
      return;
    }
    toggleButton.dataset.bound = 'true';

    let currentMode = toggleButton.dataset.mode === 'comparison' ? 'comparison' : 'verified';
    const legendEl = legend instanceof HTMLElement ? legend : null;
    const correctedContainerEl = correctedContainer instanceof HTMLElement ? correctedContainer : null;

    function bindCorrectedQuestionLinks() {
      document.querySelectorAll('[data-corrected-question-link]').forEach(link => {
        if (!(link instanceof HTMLAnchorElement) || link.dataset.bound === 'true') {
          return;
        }

        link.dataset.bound = 'true';

        link.addEventListener('click', event => {
          event.preventDefault();
          const questionId = link.dataset.correctedQuestionLink;
          if (!questionId) {
            return;
          }

          const card = document.getElementById(`question-${questionId}`);
          if (!(card instanceof HTMLElement)) {
            return;
          }

          const header = card.querySelector('.question-header');
          const content = card.querySelector('.question-content');

          if (header instanceof HTMLElement && content instanceof HTMLElement) {
            if (content.classList.contains('hidden') || content.hasAttribute('hidden')) {
              header.click();
            }
          }

          card.scrollIntoView({ behavior: 'smooth', block: 'start' });
          card.classList.add('ring-2', 'ring-amber-300', 'ring-offset-2', 'ring-offset-slate-950');

          window.setTimeout(() => {
            card.classList.remove('ring-2', 'ring-amber-300', 'ring-offset-2', 'ring-offset-slate-950');
          }, 1600);
        });
      });
    }
    bindCorrectedQuestionLinks();

    function applyMode(mode) {
      const comparisonClasses = ['from-sky-500', 'to-emerald-500', 'hover:from-sky-400', 'hover:to-emerald-400'];
      const verifiedClasses = ['from-purple-600', 'to-indigo-600', 'hover:from-purple-500', 'hover:to-indigo-500'];

      document.body.dataset.comparisonMode = mode;

      if (mode === 'comparison') {
        toggleText.textContent = 'Show Verified Only';
        toggleButton.classList.remove(...verifiedClasses);
        toggleButton.classList.add(...comparisonClasses);
        if (legendEl) {
          legendEl.classList.remove('hidden');
        }
        if (correctedContainerEl) {
          correctedContainerEl.classList.remove('hidden');
        }

        document.querySelectorAll('[data-snippet-status]').forEach(el => {
          if (!(el instanceof HTMLElement)) {
            return;
          }
          const status = el.dataset.snippetStatus;
          el.classList.remove('ring-2', 'ring-emerald-400', 'ring-amber-400', 'ring-rose-500', 'opacity-60');
          el.classList.add('comparison-mode');

          if (status === 'unchanged') {
            el.classList.add('ring-2', 'ring-emerald-400');
          } else if (status === 'classification_corrected' || status === 'categorization_corrected') {
            el.classList.add('ring-2', 'ring-amber-400');
          } else if (status === 'removed') {
            el.classList.add('ring-2', 'ring-rose-500', 'opacity-60');
          }
        });

        document.querySelectorAll('[data-comparison-badge]').forEach(badge => {
          if (badge instanceof HTMLElement) {
            badge.classList.remove('hidden');
          }
        });
      } else {
        toggleText.textContent = 'Enable Comparison Mode';
        toggleButton.classList.remove(...comparisonClasses);
        toggleButton.classList.add(...verifiedClasses);
        if (legendEl) {
          legendEl.classList.add('hidden');
        }

        document.querySelectorAll('[data-snippet-status]').forEach(el => {
          if (!(el instanceof HTMLElement)) {
            return;
          }
          el.classList.remove('comparison-mode', 'ring-2', 'ring-emerald-400', 'ring-amber-400', 'ring-rose-500', 'opacity-60');
        });

        document.querySelectorAll('[data-comparison-badge]').forEach(badge => {
          if (badge instanceof HTMLElement) {
            badge.classList.add('hidden');
          }
        });
        if (correctedContainerEl) {
          correctedContainerEl.classList.add('hidden');
        }
      }
    }

    applyMode(currentMode);

    toggleButton.addEventListener('click', () => {
      currentMode = currentMode === 'verified' ? 'comparison' : 'verified';
      toggleButton.dataset.mode = currentMode;
      applyMode(currentMode);

      window.dispatchEvent(new CustomEvent('comparisonModeChanged', {
        detail: { mode: currentMode }
      }));
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initComparisonToggle);
  } else {
    initComparisonToggle();
  }

  document.addEventListener('astro:page-load', initComparisonToggle);
</script>


