---
/**
 * Snippet Card Component
 * Displays detailed snippet information with categorization
 * Now collapsed by default with expandable summary
 */

import type { Snippet } from '../../types/analysis';
import type { SnippetChange } from '../../types/verification';
import ClassificationBadge from '../shared/ClassificationBadge.astro';
import SourceLink from '../shared/SourceLink.astro';
import {
  normalizeFinancialDisclosureType,
  normalizeTimeframeCategory
} from '../../utils/metricsCalculator';

interface Props {
  snippet: Snippet;
  index: number;
  company: string;
  year: number;
}

const { snippet, index, company, year } = Astro.props;

const financialDisclosureType = normalizeFinancialDisclosureType(snippet.categorization.financial_type);
const timeframeDisplay = normalizeTimeframeCategory(snippet.categorization.timeframe);
const comparisonStatus = (snippet as any).comparison_status || 'unchanged';
const comparisonChange = ((snippet as any).comparison_change || null) as SnippetChange | null;
const isCorrected = comparisonStatus === 'classification_corrected' || comparisonStatus === 'categorization_corrected';

function toTitleCase(value: string): string {
  return value
    .replace(/_/g, ' ')
    .split(' ')
    .map(part => part ? part.charAt(0).toUpperCase() + part.slice(1).toLowerCase() : '')
    .join(' ')
    .trim();
}

function formatDescriptor(value?: string): string {
  if (!value) return '';
  return toTitleCase(value);
}

function formatRecommendation(value?: string): string {
  if (!value) return '';
  if (value === 'keep_as_is') return 'Keep as is';
  return toTitleCase(value);
}

const comparisonStatusStyles: Record<string, { label: string; classes: string }> = {
  unchanged: {
    label: 'Verified unchanged',
    classes: 'bg-emerald-500/15 text-emerald-200 border border-emerald-400/30'
  },
  classification_corrected: {
    label: 'Classification corrected',
    classes: 'bg-amber-500/20 text-amber-200 border border-amber-400/40'
  },
  categorization_corrected: {
    label: 'Categorization corrected',
    classes: 'bg-sky-500/20 text-sky-200 border border-sky-400/40'
  },
  removed: {
    label: 'Removed during verification',
    classes: 'bg-rose-500/25 text-rose-200 border border-rose-400/40'
  }
};

const statusConfig = comparisonStatusStyles[comparisonStatus] || comparisonStatusStyles.unchanged;

const statusBadge = {
  label: statusConfig.label,
  classes: statusConfig.classes
};

const comparisonSummaries: string[] = [];

if (comparisonChange?.change_type === 'classification_corrected' && comparisonChange.original_classification && comparisonChange.verified_classification) {
  comparisonSummaries.push(
    `Classification ${formatDescriptor(comparisonChange.original_classification)} â†’ ${formatDescriptor(comparisonChange.verified_classification)}`
  );
}

if (comparisonChange?.categorization_changes?.length) {
  const fieldLabels: Record<string, string> = {
    financial_type: 'Financial disclosure type',
    timeframe: 'Timeframe',
    framing: 'Risk disclosure framing'
  };

  comparisonChange.categorization_changes.forEach(change => {
    const fieldLabel = fieldLabels[change.field] || toTitleCase(change.field);
    comparisonSummaries.push(
      `${fieldLabel}: ${formatDescriptor(change.original_value)} â†’ ${formatDescriptor(change.verified_value)}`
    );
  });
}

const shouldShowComparisonSummary =
  comparisonStatus !== 'unchanged' ||
  comparisonSummaries.length > 0 ||
  !!comparisonChange?.verification_report?.recommendation;

---

<div class="snippet-card">
  <details
    class="group border border-slate-800 rounded-xl bg-slate-950/70 transition-colors"
    data-snippet-status={comparisonStatus}
  >
    <summary class="flex items-start justify-between gap-4 px-4 py-3 sm:px-5 sm:py-4 cursor-pointer list-none">
        <div class="flex items-start gap-3 flex-1">
        <div class="flex-shrink-0 mt-0.5">
          <ClassificationBadge
            classification={snippet.classification}
            displayLabel={(snippet as any).collapsed_display || undefined}
            size="lg"
          />
        </div>
        <div class="space-y-1 flex-1">
          <div class="flex flex-wrap items-center gap-2 text-xs text-slate-400 uppercase tracking-wide">
            <span>Disclosure #{index}</span>
            <span class="px-2 py-0.5 rounded-full text-[11px] {statusBadge.classes} hidden" data-comparison-badge="true">
              {statusBadge.label}
            </span>
          </div>
          {shouldShowComparisonSummary && (
            <div class="comparison-summary flex flex-col sm:flex-row sm:flex-wrap sm:items-center gap-1 sm:gap-2 text-[11px] text-slate-300" data-comparison-summary>
              <span class={`px-2.5 py-0.5 rounded-full font-semibold uppercase tracking-wide ${statusConfig.classes}`}>
                {statusConfig.label}
              </span>
              {comparisonSummaries.map(summary => (
                <span class="text-slate-400 normal-case">{summary}</span>
              ))}
              {comparisonChange?.verification_report?.recommendation && (
                <span class="text-slate-500 normal-case sm:ml-1">Recommendation: {formatRecommendation(comparisonChange.verification_report.recommendation)}</span>
              )}
            </div>
          )}
          <div class="text-sm text-slate-200 line-clamp-2 sm:line-clamp-1">
            "{snippet.quote}"
          </div>
          <div class="flex flex-wrap gap-2 pt-1">
            <span class="px-2 py-0.5 rounded-full border border-sky-400/40 bg-sky-500/10 text-[11px] sm:text-xs font-semibold text-sky-200">
              Timeframe: {timeframeDisplay}
            </span>
            <span class="px-2 py-0.5 rounded-full border border-purple-400/40 bg-purple-500/10 text-[11px] sm:text-xs font-semibold text-purple-200">
              Narrative: {snippet.categorization.framing}
            </span>
          </div>
        </div>
      </div>
    </summary>

    <div class="px-4 pb-4 sm:px-5 sm:pb-5 space-y-4">
      <div class="text-sm text-slate-300 leading-relaxed bg-slate-900/60 border border-slate-800 rounded-lg p-3">
        "{snippet.quote}"
      </div>

      <div>
        <SourceLink source={snippet.source || ''} company={company} year={year} />
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        <div class="space-y-3 p-4 rounded-lg border border-slate-800 bg-slate-900/40">
          <div class="flex items-center gap-2 text-xs font-semibold text-slate-300 uppercase tracking-wide">
            Categorization
            <span
              class="text-[12px] text-slate-400"
              title="Timeframe: backward-looking, present day, forward-looking, multiple/unclear. Framing: risk, opportunity, neutral, or both."
              aria-label="Timeframe: backward-looking, present day, forward-looking, multiple/unclear. Framing: risk, opportunity, neutral, or both."
            >
              ⓘ
            </span>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-xs text-slate-400">
              <span class="font-semibold text-slate-300">Timeframe</span>
            </div>
            <div class="mt-2 px-2 py-1 rounded-md bg-sky-500/10 border border-sky-400/30 text-xs font-semibold text-sky-100">
              {timeframeDisplay}
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-xs text-slate-400">
              <span class="font-semibold text-slate-300">Risk Disclosure Framing</span>
            </div>
            <div class="mt-2 px-2 py-1 rounded-md bg-purple-500/10 border border-purple-400/30 text-xs font-semibold text-purple-100">
              {snippet.categorization.framing}
            </div>
          </div>
        </div>

        <div class="space-y-3 p-4 rounded-lg border border-slate-800 bg-slate-900/40">
          <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide">
            Verification Notes
          </div>
          <div class="text-xs text-slate-300 bg-slate-900 rounded-lg border border-slate-800 p-3">
            {snippet.classification_justification}
          </div>

          <div class="bg-slate-900 rounded-lg border border-slate-800 p-3 space-y-2 text-xs text-slate-300">
            <div>
              <div class="font-semibold text-sky-300 mb-1">Timeframe</div>
              <div>{snippet.categorization.timeframe_justification}</div>
            </div>
            <div>
              <div class="font-semibold text-purple-300 mb-1">Risk Disclosure Framing</div>
              <div>{snippet.categorization.framing_justification}</div>
            </div>
            {comparisonChange?.verification_report?.issues?.length ? (
              <div class="comparison-only pt-2 space-y-2">
                <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide">Verification adjustments</div>
                <ul class="list-disc list-inside text-xs text-slate-400 space-y-1">
                  {comparisonChange.verification_report.issues.map((issue, idx) => (
                    <li key={`issue-${idx}`}>{issue}</li>
                  ))}
                </ul>
                {comparisonChange.verification_report.relevance_explanation && (
                  <div class="text-[11px] text-slate-500 leading-relaxed">{comparisonChange.verification_report.relevance_explanation}</div>
                )}
              </div>
            ) : null}
          </div>
        </div>
      </div>

      {snippet.financial_amounts && snippet.financial_amounts.length > 0 && (
        <div class="space-y-2">
          <div class="text-xs font-semibold text-emerald-300 uppercase tracking-wide">
            Financial Amounts
          </div>
          <div class="flex flex-wrap gap-2">
            {snippet.financial_amounts.map(amount => (
              <div class="px-2 py-1 bg-emerald-500/15 border border-emerald-400/40 rounded text-xs font-mono text-emerald-200">
                {amount.amount} {amount.currency}
                {amount.context && (
                  <span class="text-emerald-300 ml-1">({amount.context})</span>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </details>
</div>

<style is:global>
  .comparison-summary {
    display: none;
  }

  body[data-comparison-mode="comparison"] .comparison-summary {
    display: flex;
  }

  .comparison-only {
    display: none;
  }

  body[data-comparison-mode="comparison"] .comparison-only {
    display: block;
  }
</style>




