---
/**
 * Snippet Card Component
 * Displays detailed snippet information with multi-dimensional scoring
 * Now collapsed by default with expandable summary
 */

import type { Snippet } from '../../types/analysis';
import ClassificationBadge from '../shared/ClassificationBadge.astro';
import SourceLink from '../shared/SourceLink.astro';
import {
  calculateSnippetScore,
  calculateFinancialScore,
  calculateTemporalScore,
  calculateNarrativeScore
} from '../../utils/metricsCalculator';

interface Props {
  snippet: Snippet;
  index: number;
}

const { snippet, index } = Astro.props;

const totalScore = calculateSnippetScore(snippet);
const financialScore = calculateFinancialScore(snippet);
const temporalScore = calculateTemporalScore(snippet);
const narrativeScore = calculateNarrativeScore(snippet);

function getScoreColor(score: number): string {
  if (score >= 90) return 'text-emerald-300';
  if (score >= 80) return 'text-sky-300';
  if (score >= 70) return 'text-amber-300';
  if (score >= 60) return 'text-orange-300';
  return 'text-rose-300';
}

function getProgressBarColor(score: number): string {
  if (score >= 90) return 'bg-emerald-400';
  if (score >= 80) return 'bg-sky-400';
  if (score >= 70) return 'bg-amber-400';
  if (score >= 60) return 'bg-orange-400';
  return 'bg-rose-400';
}

const status = (snippet as any).comparison_status || 'unchanged';
const statusBadge = {
  unchanged: { label: 'Unchanged', classes: 'bg-emerald-500/20 text-emerald-200 border border-emerald-400/30' },
  corrected: { label: 'Corrected', classes: 'bg-amber-500/20 text-amber-200 border border-amber-400/30' },
  removed: { label: 'Removed', classes: 'bg-rose-500/20 text-rose-200 border border-rose-400/30' }
}[status] || { label: 'Verified', classes: 'bg-slate-800 text-slate-300 border border-slate-700' };
---

<div class="snippet-card">
  <details
    class="group border border-slate-800 rounded-xl bg-slate-950/70 transition-colors"
    data-snippet-status={status}
  >
    <summary class="flex items-start justify-between gap-4 px-4 py-3 sm:px-5 sm:py-4 cursor-pointer list-none">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 mt-0.5">
          <ClassificationBadge classification={snippet.classification} size="small" />
        </div>
        <div class="space-y-1">
          <div class="flex flex-wrap items-center gap-2 text-xs text-slate-400 uppercase tracking-wide">
            <span>Snippet #{index}</span>
            <span class="font-mono text-slate-500">{snippet.snippet_id}</span>
            <span class="px-2 py-0.5 rounded-full text-[11px] {statusBadge.classes} comparison-badge hidden">
              {statusBadge.label}
            </span>
          </div>
          <div class="text-sm text-slate-200 line-clamp-2 sm:line-clamp-1">
            "{snippet.quote}"
          </div>
          <div class="flex flex-wrap gap-2 pt-1">
            <span class="px-2 py-0.5 rounded-full border border-emerald-400/40 bg-emerald-500/10 text-[11px] sm:text-xs font-semibold text-emerald-200">
              Financial: {snippet.categorization.financial_type} ({financialScore}/3)
            </span>
            <span class="px-2 py-0.5 rounded-full border border-sky-400/40 bg-sky-500/10 text-[11px] sm:text-xs font-semibold text-sky-200">
              Timeframe: {snippet.categorization.timeframe} ({temporalScore}/3)
            </span>
            <span class="px-2 py-0.5 rounded-full border border-purple-400/40 bg-purple-500/10 text-[11px] sm:text-xs font-semibold text-purple-200">
              Narrative: {snippet.categorization.framing} ({narrativeScore}/3)
            </span>
          </div>
        </div>
      </div>

      <div class="text-right">
        <div class={`text-2xl font-bold ${getScoreColor(totalScore)}`}>
          {totalScore.toFixed(0)}%
        </div>
        <div class="text-xs text-slate-500">Quality score</div>
      </div>
    </summary>

    <div class="px-4 pb-4 sm:px-5 sm:pb-5 space-y-4">
      <div class="text-sm text-slate-300 leading-relaxed bg-slate-900/60 border border-slate-800 rounded-lg p-3">
        "{snippet.quote}"
      </div>

      <div>
        <SourceLink source={snippet.source} />
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        <div class="space-y-3 p-4 rounded-lg border border-slate-800 bg-slate-900/40">
          <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide">
            Score Breakdown
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-xs text-slate-400">
              <span class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Financial Transparency
              </span>
              <span class="font-bold text-emerald-200">{financialScore}/3</span>
            </div>
            <div class="w-full bg-slate-800 rounded-full h-1.5">
              <div
                class="h-1.5 rounded-full transition-all bg-emerald-400"
                style={`width: ${(financialScore / 3) * 100}%`}
              ></div>
            </div>
            <div class="mt-2 px-2 py-1 rounded-md bg-emerald-500/10 border border-emerald-400/30 text-xs font-semibold text-emerald-100">
              {snippet.categorization.financial_type}
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-xs text-slate-400">
              <span class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-sky-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Temporal Specificity
              </span>
              <span class="font-bold text-sky-200">{temporalScore}/3</span>
            </div>
            <div class="w-full bg-slate-800 rounded-full h-1.5">
              <div
                class="h-1.5 rounded-full transition-all bg-sky-400"
                style={`width: ${(temporalScore / 3) * 100}%`}
              ></div>
            </div>
            <div class="mt-2 px-2 py-1 rounded-md bg-sky-500/10 border border-sky-400/30 text-xs font-semibold text-sky-100">
              {snippet.categorization.timeframe}
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between mb-1 text-xs text-slate-400">
              <span class="flex items-center gap-1">
                <svg class="w-3.5 h-3.5 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                </svg>
                Narrative Framing
              </span>
              <span class="font-bold text-purple-200">{narrativeScore}/3</span>
            </div>
            <div class="w-full bg-slate-800 rounded-full h-1.5">
              <div
                class="h-1.5 rounded-full transition-all bg-purple-400"
                style={`width: ${(narrativeScore / 3) * 100}%`}
              ></div>
            </div>
            <div class="mt-2 px-2 py-1 rounded-md bg-purple-500/10 border border-purple-400/30 text-xs font-semibold text-purple-100">
              {snippet.categorization.framing}
            </div>
          </div>
        </div>

        <div class="space-y-3 p-4 rounded-lg border border-slate-800 bg-slate-900/40">
          <div class="text-xs font-semibold text-slate-300 uppercase tracking-wide">
            Verification Notes
          </div>
          <div class="text-xs text-slate-300 bg-slate-900 rounded-lg border border-slate-800 p-3">
            {snippet.classification_justification}
          </div>

          <div class="bg-slate-900 rounded-lg border border-slate-800 p-3 space-y-2 text-xs text-slate-300">
            <div>
              <div class="font-semibold text-emerald-300 mb-1">Financial Type</div>
              <div>{snippet.categorization.financial_justification}</div>
            </div>
            <div>
              <div class="font-semibold text-sky-300 mb-1">Timeframe</div>
              <div>{snippet.categorization.timeframe_justification}</div>
            </div>
            <div>
              <div class="font-semibold text-purple-300 mb-1">Narrative Framing</div>
              <div>{snippet.categorization.framing_justification}</div>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-3 border-t border-slate-800">
        <div class="flex items-center justify-between mb-1">
          <span class="text-xs font-semibold text-slate-300 uppercase tracking-wide">Composite Score</span>
          <span class={`text-sm font-bold ${getScoreColor(totalScore)}`}>
            {totalScore.toFixed(1)}%
          </span>
        </div>
        <div class="w-full bg-slate-800 rounded-full h-2">
          <div
            class={`${getProgressBarColor(totalScore)} h-2 rounded-full transition-all`}
            style={`width: ${totalScore}%`}
          ></div>
        </div>
        <div class="text-[11px] text-slate-500 mt-1 text-center">
          ({financialScore} + {temporalScore} + {narrativeScore}) / 9
        </div>
      </div>

      {snippet.financial_amounts && snippet.financial_amounts.length > 0 && (
        <div class="space-y-2">
          <div class="text-xs font-semibold text-emerald-300 uppercase tracking-wide">
            Financial Amounts
          </div>
          <div class="flex flex-wrap gap-2">
            {snippet.financial_amounts.map(amount => (
              <div class="px-2 py-1 bg-emerald-500/15 border border-emerald-400/40 rounded text-xs font-mono text-emerald-200">
                {amount.amount} {amount.currency}
                {amount.context && (
                  <span class="text-emerald-300 ml-1">({amount.context})</span>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </details>
</div>
