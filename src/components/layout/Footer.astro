---
/**
 * Footer component
 */

const currentYear = new Date().getFullYear();
const baseUrl = import.meta.env.BASE_URL;
---

<footer class="mt-auto border-t border-slate-800 bg-slate-950/70 backdrop-blur">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Left: Copyright -->
        <div class="text-sm text-slate-400 text-center md:text-left">
          <p>
            © {currentYear} Agricultural Risk Disclosure Analysis
            <span class="text-slate-500"> · Powered by AI verification</span>
          </p>
        </div>

        <!-- Right: Links -->
        <div class="flex items-center gap-6 text-sm">
          <a href={baseUrl} class="text-slate-300 hover:text-sky-300 transition-colors">
            Home
          </a>
          <span class="chip text-xs border border-slate-700 text-slate-300 bg-slate-900/70">v1.0.0</span>
        </div>
      </div>
    </div>
  </div>
</footer>
