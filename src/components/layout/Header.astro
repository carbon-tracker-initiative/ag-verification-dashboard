---
/**
 * Header component with navigation
 */

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

// Navigation items aligned with dark Doppler aesthetic
const navItems = [
  { label: 'Home', href: '/', icon: 'ğŸ ' },
  { label: 'Analytics', href: '/analytics', icon: 'ğŸ“ˆ' }
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header
  class="sticky top-0 z-50 w-full border-b border-slate-800 bg-slate-950/85 backdrop-blur supports-[backdrop-filter]:bg-slate-950/65 shadow-lg"
  role="banner"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo/Title -->
      <div class="flex items-center gap-3">
        <a
          href="/"
          class="flex items-center gap-2 text-xl font-bold text-slate-100 hover:text-sky-300 transition-all duration-200 hover:scale-[1.03]"
          aria-label="Agricultural Risk Disclosure - Home"
        >
          <span class="text-2xl" aria-hidden="true">ğŸŒŒ</span>
          <span class="hidden sm:inline tracking-tight">Agricultural Risk Disclosure</span>
          <span class="sm:hidden tracking-tight">Ag Disclosure</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6" aria-label="Main navigation">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              'flex items-center gap-2 px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 glow-ring border',
              isActive(item.href)
                ? 'bg-gradient-panel border-slate-700 text-slate-100 shadow-xl'
                : 'border-transparent text-slate-300 hover:text-slate-50 hover:bg-slate-800/70'
            ]}
            aria-current={isActive(item.href) ? 'page' : undefined}
          >
            <span aria-hidden="true">{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))}
      </nav>

      <!-- Mobile menu button (placeholder) -->
      <button
        class="md:hidden p-2 rounded-md border border-slate-700 text-slate-300 hover:text-slate-50 hover:bg-slate-800/70 transition-colors"
        aria-label="Open navigation menu"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>
