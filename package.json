{
  "name": "verification-dashboard",
  "type": "module",
  "version": "1.0.0",
  "description": "Interactive dashboard for verified agricultural risk disclosure analysis with snippet-level quality scoring",
  "homepage": "https://carbon-tracker-initiative.github.io/ag-verification-dashboard",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "export:excel": "node --import tsx src/scripts/generateExcelReport.ts",
    "export:excel-merged-reviewed-v1": "node --import tsx src/scripts/generateMergedReviewedReports.ts",
    "export:excel-merged-reviewed-v2": "python workflows/excel_merged_reviewed_v2/export_comprehensive.py",
    "ingest:team-review": "node --import tsx workflows/team_reviewed/processTeamReview.ts",
    "test": "node --import tsx tests/metricsCalculator.test.ts && node --import tsx tests/dataValidation.test.ts && node --import tsx tests/dataLoader.test.ts && node --import tsx tests/components.smoke.test.ts",
    "test:metrics": "node --import tsx tests/metricsCalculator.test.ts",
    "test:validation": "node --import tsx tests/dataValidation.test.ts",
    "test:loader": "node --import tsx tests/dataLoader.test.ts",
    "test:smoke": "node --import tsx tests/components.smoke.test.ts"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.0",
    "astro": "^5.14.5",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "lucide-react": "^0.545.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.10.5",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.19.2"
  }
}
